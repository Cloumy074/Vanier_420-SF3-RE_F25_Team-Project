<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vaniercollege.controller.WaveController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#saveFile" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#saveAsFile" text="Save As" />
                  <MenuItem mnemonicParsing="false" onAction="#loadFile" text="Load" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Export...">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#exportImage" text="Chart Image" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <LineChart fx:id="chart" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="386.0" prefWidth="600.0" title="Wave Display">
              <xAxis>
                <NumberAxis autoRanging="false" label="Position (x)" prefWidth="412.0" upperBound="15.0" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="yAxis" autoRanging="false" label="Amplitude" lowerBound="-5.0" side="LEFT" upperBound="5.0" />
              </yAxis>
            </LineChart>
         </children></Pane>
   </center>
   <left>
      <VBox alignment="CENTER" prefHeight="275.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Amplitude" />
                  <TextField fx:id="amplitude" alignment="CENTER" onKeyTyped="#updateChart" prefHeight="23.0" prefWidth="60.0" text="1" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Ang. Wave Num." />
                  <TextField fx:id="angWaveNum" alignment="CENTER" onKeyTyped="#updateChart" prefHeight="23.0" prefWidth="60.0" text="1" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Ang. Freq" />
                  <TextField fx:id="angFreq" alignment="CENTER" onKeyTyped="#updateChart" prefHeight="23.0" prefWidth="60.0" text="1" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Phase Diff." />
                  <TextField fx:id="phaseDiff" alignment="CENTER" onKeyTyped="#updateChart" prefHeight="23.0" prefWidth="60.0" text="0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Type:" />
                  <ComboBox fx:id="type" onAction="#updateChart" prefHeight="23.0" prefWidth="115.0" visibleRowCount="2" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="playAnimBtn" mnemonicParsing="false" onAction="#playAnim" text="Play" />
                  <Button fx:id="playSoundBtn" mnemonicParsing="false" onAction="#playSound" text="Sound" />
                  <Button mnemonicParsing="false" onAction="#reset" style="-fx-background-color: RED; -fx-text-fill: WHITE;" text="Reset" />
               </children>
            </HBox>
         </children>
      </VBox>
   </left>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="equation" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="y(x,t) = Asin(kx-ωt+δ)" textAlignment="CENTER" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </bottom>
</BorderPane>
